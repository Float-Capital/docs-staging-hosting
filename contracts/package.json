{
  "name": "longshort",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "hardhat compile",
    "truffle-compile": "truffle compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "clean": "rm -rf build/contracts/* artifacts cache",
    "save-deployment": "/bin/bash -c 'mkdir -p ./buildsDeployed/deployed; \\cp ./build/contracts/{Dai,FloatToken,LongShort,Migrations,OracleManagerMock,Staker,TokenFactory,YieldManagerMock}.json ./buildsDeployed/deployed/'",
    "prepair-upgrade": "npm run clean; mkdir -p ./build/contracts; cp -r ./buildsDeployed/deployed/* ./build/contracts/; npm run truffle-compile",
    "verify-contracts": "truffle run verify FloatToken LongShort@$LONGSHORT_IMPLEMENTATION Staker@$STAKER_IMPLEMENTATION FloatCapital_v0@$TREASURY_IMPLEMENTATIONTreasury_v0@$FLOAT_CAPITAL_IMPLEMENTATION FloatToken TokenFactory --network $NETWORK",
    "update-testnet-contracts": "yarn clean ; rm -f .openzeppelin/dev-97.json; truffle migrate --network binanceTest --reset"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.0.8",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/cli": "^2.8.2",
    "@openzeppelin/contracts": "4.0.0-beta.1",
    "@openzeppelin/contracts-upgradeable": "4.0.0-beta.0",
    "@openzeppelin/test-helpers": "^0.5.6",
    "hardhat": "^2.0.9",
    "hardhat-gas-reporter": "^1.0.4",
    "solidity-coverage": "^0.7.14"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/truffle-upgrades": "^1.5.0",
    "@truffle/hdwallet-provider": "^1.2.1",
    "chai": "^4.2.0",
    "ethereum-waffle": "^3.0.0",
    "truffle": "^5.2.2",
    "truffle-plugin-verify": "^0.5.6"
  }
}
