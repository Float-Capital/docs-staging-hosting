{
  "name": "longshort-contracts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "BUSL-1.1",
  "scripts": {
    "compile": "hardhat compile",
    "truffle-compile": "truffle compile --all",
    "test": "hardhat test",
    "test-waffle": "WAFFLE_TEST='true' hardhat test",
    "coverage": "hardhat coverage",
    "res:clean": "bsb -clean-world",
    "res:build": "bsb -make-world -clean-world",
    "res:watch": "bsb -make-world -w",
    "clean": "rm -rf build/contracts/* artifacts cache",
    "hardhat": "hardhat",
    "save-deployment": "/bin/bash -c 'mkdir -p ./buildsDeployed/deployed; \\cp ./build/contracts/{FloatCapital_v0,FloatToken,LongShort,Migrations,Staker,TokenFactory,Treasury_v0,Dai}.json ./buildsDeployed/deployed/'",
    "prepair-upgrade": "npm run clean; mkdir -p ./build/contracts; cp -r ./buildsDeployed/deployed/* ./build/contracts/; npm run truffle-compile",
    "verify-contracts": "truffle run verify FloatToken LongShort@$LONGSHORT_IMPLEMENTATION Staker@$STAKER_IMPLEMENTATION FloatCapital_v0@$TREASURY_IMPLEMENTATIONTreasury_v0@$FLOAT_CAPITAL_IMPLEMENTATION FloatToken TokenFactory --network $NETWORK",
    "update-testnet-contracts": "yarn prepair-upgrade; rm -f .openzeppelin/unknown-{97,1337}.json; truffle migrate --network binanceTest --reset; mv .openzeppelin/unknown-1337.json .openzeppelin/unknown-97.json; yarn save-deployment"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.0.8",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/cli": "^2.8.2",
    "@openzeppelin/contracts": "^4.1.0",
    "@openzeppelin/contracts-upgradeable": "^4.0.0",
    "@openzeppelin/test-helpers": "^0.5.6",
    "chai": "^4.3.4",
    "ethers": "^5.1.4",
    "hardhat": "^2.2.1",
    "hardhat-gas-reporter": "^1.0.4",
    "solidity-coverage": "^0.7.14",
    "synchronized-promise": "^0.3.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/truffle-upgrades": "^1.5.0",
    "@tenderly/hardhat-tenderly": "^1.0.12",
    "@truffle/hdwallet-provider": "^1.2.1",
    "bs-let": "^0.1.16",
    "bs-mocha": "^1.0.0",
    "bs-platform": "^9.0.2",
    "ethereum-waffle": "^3.3.0",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "truffle": "^5.3.0",
    "truffle-plugin-verify": "^0.5.7"
  }
}
